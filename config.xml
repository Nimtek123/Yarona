<?xml version='1.0' encoding='utf-8'?>
<widget id="opex.co.za.yarona" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Yarona</name>
    <description>
        The Yarona app lets you manage your transportation in Rustenburg 
    </description>
    <author email="nimrod@opexconnect.co.za" href="https://opexconnect.co.za">
        Opex Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/screen-hdpi-landscape.png" />
        <splash density="port-ldpi" src="res/screen/android/screen-hdpi-portrait.png" />
    </platform>
    <icon src="icon.png" />
    <splash src="splash.png" />
    <platform name="ios">
        <icon height="57" src="res/icon/ios/icon.png" width="57" />
        <icon height="114" src="res/icon/ios/icon@2x.png" width="114" />
        <icon height="72" src="res/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="res/icon/ios/icon-72@2x.png" width="144" />
        <icon height="60" src="res/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="76" src="res/icon/ios/icon-76.png" width="76" />
        <icon height="152" src="res/icon/ios/icon-76@2x.png" width="152" />
        <splash height="480" src="res/splash/ios/Default~iphone.png" width="320" />
        <splash height="960" src="res/splash/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="res/splash/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="res/splash/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="res/splash/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="res/splash/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="res/splash/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="res/splash/ios/Default-667h.png" width="750" />
        <splash height="2208" src="res/splash/ios/Default-736h.png" width="1242" />
        <splash height="1242" src="res/splash/ios/Default-Landscape-736h.png" width="2208" />
    </platform>
    <platform name="wp8">
        <icon height="99" platform="wp8" src="res/icon/android/icon-48-mdpi.png" width="99" />
        <icon height="159" platform="wp8" src="res/icon/android/icon-96-xhdpi.png" width="159" />
        <splash height="1280" platform="wp8" src="res/screen/android/screen-hdpi-portrait.png" width="768" />
    </platform>
    <platform name="windows">
        <icon height="50" platform="windows" src="res/icon/windows-phone/StoreLogo.scale-100.png" width="50" />
        <splash height="300" platform="windows" src="res/screen/windows-phone/SplashScreen.scale-100.png" width="620" />
        <icon height="120" platform="windows" src="res/icon/android/icon-96-xhdpi.png" width="120" />
    </platform>
    <engine name="android" spec="^6.4.0" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="windows" spec="~5.0.0" />
    <engine name="ios" spec="~4.5.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-device-orientation" spec="^1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-splashscreen" spec="^3.2.2" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Allow Yarona to use your current location to see stops near you" />
    </plugin>
</widget>
