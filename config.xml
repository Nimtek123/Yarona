<?xml version='1.0' encoding='utf-8'?>
<widget id="opex.co.za.yarona" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Yarona</name>
    <description>
        The Yarona app lets you manage your transportation in Rustenburg 
    </description>
    <author email="nimrod@opexconnect.co.za" href="https://opexconnect.co.za">
        Opex Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/screen-hdpi-landscape.png" />
        <splash density="port-ldpi" src="res/screen/android/screen-hdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
     <platform name="wp8">
        <icon height="99" platform="wp8" src="res/icon/android/icon-48-mdpi.png" width="99" />
        <icon height="159" platform="wp8" src="res/icon/android/icon-96-xhdpi.png" width="159" />
        <splash height="1280" platform="wp8" src="res/screen/android/screen-hdpi-portrait.png" width="768" />
    </platform>
    <platform name="windows">
        <icon height="50" platform="windows" src="res/icon/android/icon-48-mdpi.png" width="50" />
        <splash height="300" platform="windows" src="res/screen/android/screen-hdpi-portrait.png" width="620" />
        <icon height="120" platform="windows" src="icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" width="120" />
        <splash height="1920" platform="windows" src="res/screen/android/screen-hdpi-landscape.png" width="1152" />
    </platform>
    <engine name="android" spec="^6.4.0" />
    <engine name="browser" spec="^4.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-device-orientation" spec="^1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-splashscreen" spec="^3.2.2" />
    <plugin name="cordova-plugin-geolocation" spec="^2.1.0" />
    <engine name="windows" spec="~5.0.0" />
</widget>
